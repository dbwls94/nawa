<div id="login_wrap" class="form_wrapper layer">
	<div class="header">
		<div id="login_window_message"></div>
		<div class="close_btn">X</div>
	</div>
	<div class="layer_content">
		<div class="layer_content_wrap">
			<div class="layer_menu">
				<div class="login on">로그인</div>
				<div class="signup">처음이세요?</div>
			</div>
			
			<form id="login_form" onsubmit="return login(this)">	
				<input type="email" id="login_id" placeholder="E-mail" required />
				<input type="password" id="login_pw" placeholder="비밀번호" required />
			</form>			
				
			<div class="layer_buttons">
				<button type="button" id="login_facebook">로그인</button>
				<button type="button" id="login_btn" class="main_btn">로그인</button>
				<button type="button" id="find_pw">비밀번호찾기</button>
			</div>
				
		
		</div>
	</div>
</div>

<div id="signup_wrap" class="form_wrapper layer">
	<div class="header">
		<div id="layer_message"></div>
		<div class="close_btn">X</div>
	</div>
	<div class="layer_content">
		<div class="layer_content_wrap">
			<div class="layer_menu">
				<div class="login">로그인</div>
				<div class="signup on">처음이세요?</div>
			</div>
			
			<div class="facebook_login">
			<button type="button" id="signup_facebook">페이스북으로 로그인</button>
			</div>
			
			<form id="signup_form" onsubmit="return signup(this)" enctype="'multipart/form-data">
				<input type="hidden" id="signup_genger" value="male" />
				<div class="upload">
				  <img src="" class="signup-image" id="image-upload">
			        <input type="file" id="signup_profile_img" />
			    </div>	
				<input type="text" id="signup_name" placeholder="이름" required />	
				<input type="email" id="signup_email" placeholder="E-mail" required />	
				<input type="password" id="signup_pw" placeholder="비밀번호" required />	
				<input type="password" id="signup_pw_check" placeholder="비밀번호 확인" required />
				<div id="signup_select_gender">
					<div class="select_gender_label">성별</div>
					<div class="select_gender_content">
						<div id="signup_gender_1" class="on"></div>
						<div id="signup_gender_2"></div>
					</div>
				</div>
			</form>			
				
			<div class="layer_buttons">
				<button type="button" id="signup_btn" class="main_btn">가입하기</button>
			</div>
				
		
		</div>
	</div>
</div>


