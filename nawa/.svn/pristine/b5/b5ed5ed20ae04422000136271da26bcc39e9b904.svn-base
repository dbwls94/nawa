@CHARSET "UTF-8";



body{
  background:#dfe3ee;

}


/* login form display */
#Register{
  width:500px;
  margin:0 auto;
  margin-top:5%;
  
}



#Register h1{
  
  font-size:140%;
  font-weight:300;
  text-align:center;
  color:#000000;
}
/*form style */
form{
  background:#f0f0f0;
  padding:5% 5% 5% 5%;
}
/*email, password input  */
input[type="email"],input[type="password"]{
  width:90%;
  background:#fff;
  margin-bottom:5%;
  border:1px solid #ccc;
  padding:4%;
  font-size:95%;
  color:#555;
}
/*log in button  */
input[type="submit"]{
  width:100%;
  background:#3b5998;
  padding:5%;
  margin-bottom: 2%;
  font-size:100%;
  color:#fff;
  cursor:pointer;
  transition:background .3s;
  -webkit-transition:background .3s;
}
input[type="button"]{
  width:100%;
  background:#3b5998;
  padding:5%;
  margin-bottom: 2%;
  font-size:100%;
  color:#fff;
  cursor:pointer;
  transition:background .3s;
  -webkit-transition:background .3s;
}
input#buttonPic{
  width:100%;
  background:#3b5998;
  padding:5%;
  margin-bottom: 2%;
  font-size:100%;
  color:#fff;
  cursor:pointer;
  transition:background .3s;
  -webkit-transition:background .3s;
  position:absolute;
  cursor:auto;
}
input[type="submit"]:hover{
  background:#8b9dc3;
}
input[type="button"]:hover{
  background:#8b9dc3;
}

input[type="radio"]{
  margin-bottom:2%;
  margin-right: 5%;
  margin-left: 15%;
}
